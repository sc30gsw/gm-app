<div class="regist-main">
  <div class="regist-content">
    <div class="regist-title">
      <h3 class="regist-first-text">GMM</h3>
    </div>
    <div class="regist-twitter-icon">
      <%= link_to user_twitter_omniauth_authorize_path, method: :post do %>
        <i class="fab fa-twitter"></i>
        Twitterでログイン
      <% end %>
    </div>
    <div class="regist-facebook-icon">
      <%= link_to user_facebook_omniauth_authorize_path, method: :post do %>
        <i class="fab fa-facebook-square"></i>
        Facebookでログイン
      <% end %>
    </div>
    <div class="regist-google-icon">
      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post do %>
        <i class="fab fa-google"></i>
        Googleでログイン
      <% end %>
    </div>
  </div>

  <div class="registration">
    <div class="regist-border-select">
      <div class="regist-border"></div>
      <div class="regist-select">または</div>
      <div class="regist-border"></div>
    </div>
    <%= form_with(model: @user, url: user_session_path, method: :post, local: true) do |f| %>
      <div class="error-flash-message">
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>

      <div class="regist-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "user-regist" %>
      </div>

      <div class="regist-field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "user-regist" %>
      </div>

      <div class="regist-submit">
        <%= f.submit "ログインする" , class: "regist-btn" %>
      </div>
    <% end %>
    <div class="regist-session-box">
      アカウントをお持ちでないですか? <%= link_to '登録する', new_user_registration_path, class: "regist-session" %>
    </div>
  </div>
</div>