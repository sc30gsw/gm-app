<header class="header">
  <%= render 'shared/header' %>
</header>
<main class="notice-main">
  <div class="top-left-contents">
    <div class='notice-list-navi'>
      <p>通知一覧</p>
    </div>
    <% if @notifications.exists? %>
      <%= render "notification" %>
      <div class="notification-delete-command">
        <%= link_to "通知削除", notification_path(@notifications), method: :delete ,class: "fas fa-trash trash-notice" %>
      </div>
    <% else %>
      <div class="not-notice">
        <p>通知はありません</p>
      </div>
    <% end %>
  </div>
  <div class="top-right-contents">
    <%= render 'shared/weather' %>
  </div>
</main>
<footer class="footer">
  <%= render 'shared/footer' %>
</footer>