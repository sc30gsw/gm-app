<header class="header">
  <%= render 'shared/header' %>
</header>
<div class="main-image">
  <div class="main-image-copy">
    <h2 class="main-catch-copy">あの偉人に会いに行こう。</h2>
  </div>
</div>
<main class="main">
  <div class="top-left-contents">
    <div class="main-search-box">
      <input type="search" placeholder="検索を始める" class="main-search-input">
      <input type="submit" value="&#xf002;" class="fas main-search-icon main-search-submit">
    </div>
    <div class="search-category-title">
      <h3 class="search-category-text">偉人のカテゴリーを選択</h3>
    </div>
    <div class="upper-search-category">
      <ul class="search-category-lists">
        <%= link_to "/mans/category/10" do %>
          <li class="search-category-btn">安土桃山</li>
        <% end %>
        <%= link_to "/mans/category/11" do %>
          <li class="search-category-btn">江戸</li>
        <% end %>
        <%= link_to "/mans/category/13" do %>
          <li class="search-category-btn">幕末</li>
        <% end %>
      </ul>
    </div>
    <div class="lower-search-category">
      <ul class="search-category-lists">
        <%= link_to "/mans/category/16" do %>
          <li class="search-category-btn">ヨーロッパ</li>
        <% end %>
        <%= link_to "/mans/category/17" do %>
          <li class="search-category-btn">北アメリカ</li>
        <% end %>
        <%= link_to "/mans/category/19" do %>
          <li class="search-category-btn">中国</li>
        <% end %>
      </ul>
    </div>
    <div class="item-list-nav">
      <h4>Time Line</h4>
    </div>
    <%= render 'shared/mans' %>
  </div>
  <div class="top-right-contents">
    <%= render 'shared/weather' %>
  </div>
</main>
<footer class="footer">
  <%= render 'shared/footer' %>
</footer>
